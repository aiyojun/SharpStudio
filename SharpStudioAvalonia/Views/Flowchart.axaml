<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SharpStudioAvalonia.Views.Flowchart">
    <Canvas x:Name="Container" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#333" ClipToBounds="True"
            PointerPressed="OnMouseDown" PointerMoved="OnMouseMove" PointerReleased="OnMouseUp" PointerWheelChanged="OnWheel">
        <Canvas x:Name="EdgeLayer"/>
        <Canvas x:Name="NodeLayer"/>
    </Canvas>
</UserControl>
