<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:quartz="clr-namespace:SharpStudioAvalonia.Quartz">
    <Design.PreviewWith>
        <Border Padding="20">
            <!-- Add Controls for Previewer Here -->
        </Border>
    </Design.PreviewWith>

    <!-- Add Styles Here -->
    <Style Selector="TextBox">
        <Setter Property="Height" Value="24"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Background" Value="Transparent"/>
    </Style>
    <Style Selector="CheckBox">
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="HorizontalContentAlignment" Value="Right"/>
        <!-- <Setter Property="Padding" Value="0"/> -->
    </Style>
    <Style Selector="ComboBox">
        <Setter Property="Height" Value="24"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalContentAlignment" Value="Right"/>
    </Style>
    <Style Selector="TextBox">
        <Setter Property="TextAlignment" Value="Right"/>
    </Style>
    <Style Selector="NumericUpDown">
        <Setter Property="TextAlignment" Value="Right"/>
    </Style>
    <Style Selector="Button">
        <Setter Property="HorizontalAlignment" Value="Right"/>
    <!--     <Setter Property="Background" Value="Transparent"/> -->
    <!--     <Setter Property="Foreground" Value="DodgerBlue"/> -->
    <!--     <Setter Property="Cursor" Value="Hand"/> -->
    <!--     <Style Selector="^:pointerover"> -->
    <!--         <Setter Property="Background" Value="Transparent"/> -->
    <!--         <Setter Property="Foreground" Value="DodgerBlue"/> -->
    <!--     </Style> -->
    </Style>
    
    <Style Selector="Border.WidgetBorder">
        <Setter Property="Background" Value="#333"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Margin" Value="2"/>
        <Setter Property="Padding" Value="5 2"/>
    </Style>
    <Style Selector="Border.TextBorder">
        <Setter Property="Margin" Value="2"/>
        <Setter Property="Padding" Value="5 2"/>
    </Style>
    <Style Selector="Border.ImageBorder">
        <Setter Property="Height" Value="140"/>
        <Setter Property="Margin" Value="2"/>
        <Setter Property="Padding" Value="5 2"/>
        <Setter Property="Background" Value="#333"/>
        <Setter Property="CornerRadius" Value="6"/>
    </Style>
    <Style Selector="Border.Port">
        <Setter Property="Width" Value="12"/>
        <Setter Property="Height" Value="12"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Background" Value="#fff"/>
    </Style>
    <Style Selector="Border.Import">
        <Setter Property="Margin" Value="0,0,5,0"/>
    </Style>
    <Style Selector="Border.Export">
        <Setter Property="Margin" Value="5,0,0,0"/>
    </Style>
    <Style Selector="Border.Node">
        <Setter Property="Background" Value="#444"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Padding" Value="5"/>
    </Style>
    <Style Selector="Border.NodeFold">
        <Setter Property="Width" Value="12"/>
        <Setter Property="Height" Value="12"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Background" Value="#FFF"/>
        <Setter Property="Margin" Value="0 0 5 0"/>
    </Style>
</Styles>
