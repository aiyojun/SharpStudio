<UserControl x:Class="SharpStudioWpf.Docker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="40">
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"></ContentPresenter>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource App.Brushes.Theme}" />
                                <Setter Property="Foreground" Value="{DynamicResource App.Brushes.Highlight}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Width"  Value="32" />
            <Setter Property="Height" Value="32" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="{DynamicResource App.Brushes.Foreground}" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <!-- <Setter Property="UseLayoutRounding" Value="True" /> -->
        </Style>
        <Style TargetType="Path">
            <Setter Property="Width" Value="18" />
            <Setter Property="Height" Value="18" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <!-- <Setter Property="Fill" Value="{Binding RelativeSource={RelativeSource AncestorType=Button},Path=Foreground}" /> -->
            <Setter Property="Fill" Value="Transparent" />
            <Setter Property="StrokeThickness" Value="1.5" />
            
            <Setter Property="Stroke" Value="{Binding RelativeSource={RelativeSource AncestorType=Button},Path=Foreground}" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="Stretch" Value="Uniform" />
            <!-- <Setter Property="RenderOptions.EdgeMode" Value="Aliased" /> -->
        </Style>
        <Style x:Key="ButtonLabel" TargetType="Label">
            <Setter Property="Foreground" Value="{Binding RelativeSource={RelativeSource AncestorType=Button},Path=Foreground}" />
            <Setter Property="FontSize" Value="10" />
        </Style>
        <Style TargetType="ToolTip">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Placement" Value="Right"/>
            <Setter Property="HorizontalOffset" Value="5"/>
            <Setter Property="Background" Value="#333"/>
            <Setter Property="Foreground" Value="#fff"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </UserControl.Resources>
    <Border>
        <StackPanel Orientation="Vertical" Width="40">
            <Button Margin="0,3,0,0">
                <!-- <StackPanel Orientation="Vertical"> -->
                <Path Data="M14.5 4h-5L7 7H4a2 2 0 0 0-2 2v9a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2h-3l-2.5-3zM9 13a3 3 0 1 0 6 0a3 3 0 1 0 -6 0z" />
                    <!-- <Label Style="{StaticResource ButtonLabel}" Content="工业相机" /> -->
                <!-- </StackPanel> -->
                <Button.ToolTip>
                    <ToolTip>
                        <TextBlock Text="工业相机"/>
                    </ToolTip>
                </Button.ToolTip>
            </Button>
            <Button Margin="0,3,0,0">
                <!-- <StackPanel Orientation="Vertical"> -->
                    <Path Data="M3,5a9,3 0 1,0 18,0a9,3 0 1,0 -18,0M3 5V19A9 3 0 0 0 21 19V5M3 12A9 3 0 0 0 21 12"/>
                    <!-- <Label Style="{StaticResource ButtonLabel}" Content="历史数据"/> -->
                <!-- </StackPanel> -->
                <Button.ToolTip>
                    <ToolTip>
                        <TextBlock Text="历史数据"/>
                    </ToolTip>
                </Button.ToolTip>
            </Button>
            <Button Margin="0,3,0,0">
                <!-- <StackPanel Orientation="Vertical"> -->
                    <Path Data="M3 7V5a2 2 0 0 1 2-2h2M17 3h2a2 2 0 0 1 2 2v2M21 17v2a2 2 0 0 1-2 2h-2M7 21H5a2 2 0 0 1-2-2v-2M8 7v10M12 7v10M17 7v10"/>
                    <!-- <Label Style="{StaticResource ButtonLabel}" Content="实时检测"/> -->
                <!-- </StackPanel> -->
                <Button.ToolTip>
                    <ToolTip>
                        <TextBlock Text="实时检测"/>
                    </ToolTip>
                </Button.ToolTip>
            </Button>
            <Button Margin="0,3,0,0">
                <!-- <StackPanel Orientation="Vertical"> -->
                    <Path Data="M3 5a2 2 0 0 1 2 -2h4a2 2 0 0 1 2 2v4a2 2 0 0 1 -2 2h-4a2 2 0 0 1 -2 -2zM7 11v4a2 2 0 0 0 2 2h4M13 15a2 2 0 0 1 2 -2h4a2 2 0 0 1 2 2v4a2 2 0 0 1 -2 2h-4a2 2 0 0 1 -2 -2z"/>
                    <!-- <Label Style="{StaticResource ButtonLabel}" Content="后处理"/> -->
                <!-- </StackPanel> -->
                <Button.ToolTip>
                    <ToolTip>
                        <TextBlock Text="后处理"/>
                    </ToolTip>
                </Button.ToolTip>
            </Button>
        </StackPanel>
    </Border>
</UserControl>
