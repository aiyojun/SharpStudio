<?xml version="1.0" encoding="UTF-8"?>

<Window x:Class="SharpStudioWinui3.Views.DevTool"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border Background="#333">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Horizontal">
                <Button Content="Fetch Tree" Click="OnFreshTree"/>
            </StackPanel>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <ScrollView Grid.Column="0" Width="300">
                    <TreeView x:Name="Tree" ItemInvoked="OnItemInvoked"/>
                </ScrollView>
                <Border Grid.Column="1">
                    <ScrollView>
                        <StackPanel Orientation="Vertical" x:Name="Properties">
                        </StackPanel>
                    </ScrollView>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>